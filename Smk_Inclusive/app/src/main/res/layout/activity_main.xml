<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.visionet.smk_inclusive.MainActivity">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:srcCompat="@drawable/logodinacom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="290dp"
        android:id="@+id/dinacom" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/play"
        android:layout_alignTop="@+id/dinacom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/play" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/about"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:id="@+id/about" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/exit"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:id="@+id/exit" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/sound_on"
        android:id="@+id/sound_on"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/dinacom" />

</RelativeLayout>
