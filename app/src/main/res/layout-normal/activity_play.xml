<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mulyanto.dinacom.Play"
    android:background="@color/material_grey_100">

    <Button
        android:layout_width="160dp"
        android:id="@+id/btnjaringan"
        android:background="@drawable/hover_jaringan"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:id="@+id/btnprogram"
        android:background="@drawable/hover_program"
        android:layout_height="160dp"
        android:layout_alignTop="@+id/btnjaringan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btntab"
        android:background="@drawable/hover_tab"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btnjaringan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnotomotif"
        android:background="@drawable/hover_otomotif"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btnprogram"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btntele"
        android:background="@drawable/hover_tele"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btntab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnbangunan"
        android:background="@drawable/hover_tb"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/btnotomotif"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/balek"
        android:background="@drawable/hover_back" />
</RelativeLayout>
